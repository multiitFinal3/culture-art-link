<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.multi.culture_link.users.model.mapper.UserMapper">

    <select id="findUserByEmail">

        SELECT *

        FROM vw_user_role_data

        WHERE email=#{email};

    </select>



    <insert id="insertUser" parameterType="userDTO">

        INSERT INTO user(user_id, email, password, user_name, tel, gender, region_id)
        VALUES(#{userId},#{email},#{password},#{userName},#{tel},#{gender},#{regionId});



    </insert>




</mapper>